<local:ViewBase x:Class="WpfApp.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfApp"
        mc:Ignorable="d"
        Title="Book Manager (MVVM)" Height="600" Width="1000">
    <Grid Margin="12">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="2*" />
            <ColumnDefinition Width="*" />
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>

        <Border Grid.ColumnSpan="2" Padding="8" BorderBrush="#DDD" BorderThickness="1" CornerRadius="4">
            <StackPanel Orientation="Horizontal" VerticalAlignment="Center">
                <StackPanel Margin="0,0,8,0">
                    <TextBlock Text="Автор" />
                    <TextBox Width="180" Text="{Binding AuthorFilter, UpdateSourceTrigger=PropertyChanged}" />
                </StackPanel>
                <StackPanel Margin="0,0,8,0">
                    <TextBlock Text="Название" />
                    <TextBox Width="180" Text="{Binding TitleFilter, UpdateSourceTrigger=PropertyChanged}" />
                </StackPanel>
                <StackPanel Margin="0,0,8,0">
                    <TextBlock Text="Жанр" />
                    <TextBox Width="140" Text="{Binding GenreFilter, UpdateSourceTrigger=PropertyChanged}" />
                </StackPanel>
                <Button Content="Обновить" Width="120" Height="32" Margin="8,16,0,0" Command="{Binding RefreshCommand}" />
            </StackPanel>
        </Border>

        <DataGrid Grid.Row="1"
                  Grid.Column="0"
                  ItemsSource="{Binding Books}"
                  SelectedItem="{Binding SelectedBook, Mode=TwoWay}"
                  AutoGenerateColumns="False"
                  IsReadOnly="True"
                  Margin="0,12,12,12">
            <DataGrid.Columns>
                <DataGridTextColumn Header="ID" Binding="{Binding Id}" Width="60" />
                <DataGridTextColumn Header="Название" Binding="{Binding Title}" Width="*" />
                <DataGridTextColumn Header="Автор" Binding="{Binding Author}" Width="*" />
                <DataGridTextColumn Header="Год" Binding="{Binding Year}" Width="80" />
                <DataGridTextColumn Header="Жанры" Binding="{Binding GenresDisplay}" Width="2*" />
            </DataGrid.Columns>
        </DataGrid>

        <StackPanel Grid.Column="1" Grid.Row="1" Margin="0,12,0,12">
            <TextBlock Text="Детали книги" FontWeight="SemiBold" FontSize="14" />
            <StackPanel Margin="0,6,0,0">
                <TextBlock Text="Название" />
                <TextBox Text="{Binding Title, UpdateSourceTrigger=PropertyChanged}" />
            </StackPanel>
            <StackPanel Margin="0,6,0,0">
                <TextBlock Text="Автор" />
                <TextBox Text="{Binding Author, UpdateSourceTrigger=PropertyChanged}" />
            </StackPanel>
            <StackPanel Margin="0,6,0,0">
                <TextBlock Text="Год" />
                <TextBox Text="{Binding Year, UpdateSourceTrigger=PropertyChanged}" />
            </StackPanel>
            <StackPanel Margin="0,6,0,0">
                <TextBlock Text="Жанры (через запятую)" />
                <TextBox Text="{Binding GenresText, UpdateSourceTrigger=PropertyChanged}" AcceptsReturn="True" Height="60" TextWrapping="Wrap" />
            </StackPanel>
            <TextBlock Text="Доступные жанры:" FontWeight="SemiBold" />
            <ItemsControl ItemsSource="{Binding AvailableGenres}">
                <ItemsControl.ItemsPanel>
                    <ItemsPanelTemplate>
                        <WrapPanel />
                    </ItemsPanelTemplate>
                </ItemsControl.ItemsPanel>
                <ItemsControl.ItemTemplate>
                    <DataTemplate>
                        <Border Margin="2" Padding="4" Background="#EEE" CornerRadius="4">
                            <TextBlock Text="{Binding}" />
                        </Border>
                    </DataTemplate>
                </ItemsControl.ItemTemplate>
            </ItemsControl>

            <StackPanel Orientation="Horizontal">
                <Button Content="Добавить" Width="90" Margin="0,4,8,0" Command="{Binding AddBookCommand}" />
                <Button Content="Обновить" Width="90" Margin="0,4,8,0" Command="{Binding UpdateBookCommand}" />
                <Button Content="Удалить" Width="90" Margin="0,4,0,0" Command="{Binding DeleteBookCommand}" />
            </StackPanel>
        </StackPanel>

        <TextBlock Grid.ColumnSpan="2"
                   Grid.Row="2"
                   Margin="0,8,0,0"
                   Text="{Binding StatusMessage}"
                   FontStyle="Italic" />
    </Grid>
</local:ViewBase>
